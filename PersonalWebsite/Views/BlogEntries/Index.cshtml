<div class="blog-posts">
    @if(User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    @foreach (var item in Model)
    {
        <div class="blog-post">
            <div class="row">
                <div class="col-md-8">
                    <h3 class="title-post"><a href="blog_single.html"><i class="fa fa-picture-o"></i> @Html.DisplayFor(modelItem => item.Title)</a></h3>
                </div>
                <div class="col-md-4">
                    <div class="blog-date">
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </div>
                </div>
            </div>
            <div class="body-post">
                <div class="imgWrapper">
                    <img src="~/assets/images/bugatti.jpg" class="img-full blog-img" alt="" />
                </div>
                @Html.DisplayFor(modelItem => item.Body)
                    <a href="blog_single.html" class="btn btn-flat style2">Continue Reading...</a>
                <div class="love-post-btn">
                    <a href="#"><span><i class="fa fa-heart"></i> 3</span></a>
                </div>
            </div>
        </div>
  
    }
</div>
